.cpb_form_item
  margin-bottom 10px

.cpb_form_label
  margin-bottom 2px

.filters-panel .cpb_form_label
  font-weight normal
  color #555

.cpb_form_input
  display block
  width 100%
  height 30px
  padding 3px 8px
  font-size 14px
  color #555
  background-color #fff
  background-image none
  border 1px solid #ccc
  border-radius 4px
  box-shadow inset 0 1px 1px rgba(0, 0, 0, .075)
  transition border-color ease-in-out .15s, box-shadow ease-in-out .15s

.cpb_form
  display table
  margin-top 10px
  position relative

  .cpb_form_item
    display table-row

  .cpb_form_label
    display table-cell
    padding 0 20px 30px 0
    &-checkbox
      font-weight normal

  .cpb_form_cell,
  .cpb_form_input
    display table-cell
    &:focus, &:active
      border-color #66afe9
      outline 0
      box-shadow inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(102, 175, 233, .6)
    &-number
      width 100px
    &-select, &-string
      width 190px

.cpb_field_items
  display table
  margin-bottom 5px

.cpb_field_item
  display: table-row;

.cpb_field_label,
.cpb_field_value
  display table-cell
  padding 5px 0

.cpb_field_label
  font-weight bold
  padding-right 25px
  position relative
  &:after
    border-bottom 1px dotted #979797
    bottom 6px
    content ""
    display block
    right 4px
    left 0
    position absolute
    z-index 10

.cpb_field_label_title
  background #fff
  padding 0 3px 3px 0
  position relative
  z-index 20

.cpb_form_error
  color #a94442
  position absolute
  width 100%
  height 22px
  overflow hidden


.body_mobile
  .cpb_form, .cpb_form_item
    display block

  .cpb_form_label
    display block
    padding 0

  .cpb_form
    .cpb_form_input
      display block
      &-number, &-select, &-string
        width 100%
      &__wrapper
        display flex
        .cpb_form_input__after
          margin-left 5px
          align-self center

  .cpb_form_error
    position static
    height auto
    overflow visible

.cpb_form_spacer
  display: table-row;
  &:before, &:after
    content " "
    display table-cell
    padding-bottom 25px
    border-top 1px solid #ccc

.cpb_form_input_color
    &__color
        cursor pointer
        width 26px
        height 26px
        margin-right 11px
        margin-bottom 2px
        display inline-block
        border-radius 50%
    &__wrapper
        max-width 325px
        vertical-align middle
        display table-cell
        padding-bottom 14px
        .cpb_form_input_color:first-child
            .cpb_form_input_color__color
                box-shadow inset 0 0 0 1px #dedede
    input
        display none
        &:checked + span
            background-image url(/static/main/images/color_check.svg)
            background-repeat no-repeat
            background-position 50% 50%
